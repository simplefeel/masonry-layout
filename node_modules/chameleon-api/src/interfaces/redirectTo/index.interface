<script cml-type="interface">
type options = {
  path: String,
  query: CMLObject,
  url: String
}

interface UtilsInterface {
  redirectTo(opt: options): void;
}

</script>

<script cml-type="web">

  class Method implements UtilsInterface {
    redirectTo(opt) {
      let {path, query} = opt;

      let runtime = require("chameleon-runtime").default;
      let {router, routerConfig} = runtime.getInfo();

      if (path && router) {
        let flag = false;

        let routes = routerConfig.routes;
        for (let i = 0; i < routes.length;i++) {
          let route = routes[i];
          if (path === route.path) {
            flag = true;
            router.replace({
              path: route.url,
              query
            })
            break;
          }
        }
        if (!flag) {
          router.replace({
            path: router.options.routes[0].path,
            query
          });
        }
      } else {
        router.replace({
          path: router.options.routes[0].path,
          query
        });
      }
    }
  }
  export default new Method();
</script>

<script cml-type="weex">

  class Method implements UtilsInterface {
    redirectTo(opt) {
      var runtime = require("chameleon-runtime").default;

      let { router } = runtime.getInfo();
      let { path, query } = opt;

      router.replace({
        path,
        query
      });
    }
  }
  export default new Method();
</script>

<script cml-type="wx">
import { buildQueryStringUrl } from '../../lib/utils.js';
  class Method implements UtilsInterface {
    redirectTo(opt) {
      let {path, query} = opt;
      path = buildQueryStringUrl(query, path)
      wx.redirectTo({
